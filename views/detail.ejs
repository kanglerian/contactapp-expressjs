<section>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-8">
                <h2><b>Detail Contact</b></h2>
                <% if (!contact) { %>
                <div class="alert alert-danger font-weight-bold" role="alert">
                    Data contact tidak ada <br><a href="/contact" class="alert-link font-weight-normal">&laquo; Kembali ke daftar contact.</a>
                </div>
                <% } else {%>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                      <h5 class="card-title"><%= contact.nama %></h5>
                      <h6 class="card-subtitle mb-2 text-muted"><%= contact.nohp %></h6>
                      <p class="card-text"><%= contact.noreg %></p>
                      <p class="card-text"><%= contact.email %></p>
                      <a href="/contact/edit/<%= contact.noreg %>" class="btn btn-warning badge">ubah</a>
                      <a href="/contact/delete/<%= contact.noreg %>" class="btn btn-danger badge" onclick="confirm('Yakin?');">hapus</a>
                      <a href="/contact" class="card-link d-block mt-3">&laquo; Kembali ke daftar contact</a>
                    </div>
                </div>
                <% } %> 
            </div>
        </div>
    </div>
</section>