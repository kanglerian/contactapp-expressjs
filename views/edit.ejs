<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="my-3"><b>Edit data kontak</b></h2>

                <% if (typeof errors != 'undefined') {%> 
                  <div class="alert alert-danger" role="alert">
                    <ul>
                      <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                      <% }) %>
                    </ul>
                  </div>
                <% } %> 

                <form method="POST" action="/contact/update">
                    <input type="hidden" name="oldnoreg" value="<%= contact.oldnoreg || contact.noreg %>">
                    <div class="form-group">
                      <label for="noreg">No. Registrasi</label>
                      <input type="text" class="form-control" id="noreg" name="noreg" value="<%= contact.noreg %>" required>
                    </div>
                    <div class="form-group">
                      <label for="nama">Nama</label>
                      <input type="text" class="form-control" id="nama" name="nama" value="<%= contact.nama %>" required>
                    </div>
                    <div class="form-group">
                      <label for="email">Email</label>
                      <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>" required>
                    </div>
                    <div class="form-group">
                      <label for="nohp">No Handphone</label>
                      <input type="text" class="form-control" id="nohp" name="nohp" value="<%= contact.nohp %>" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm">Ubah data</button>
                </form>
            </div>
        </div>
    </div>
</section>